<div id="reply-comment-<%= comment.id %>"></div>

<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>

 <%= link_to 'reply', new_blog_comment_path(@blog, parent_id: comment.id), remote: true %>
 
 <% if comment.replies.any? %>
    <% comment.replies.each do |reply| %> 
      <%= render partial: 'comments/reply', locals: { reply: reply } %>
    <% end %>
  <% end %>